<div class="container" >

  <div style =" padding-top: 2%">

      <%= link_to "Create", new_admin_user_path, class:"btn btn-info", id: "spacing2"%>

    <div class="search-form">

      <%= form_tag(admin_users_path, method: :get, class: 'form-inline') do %>

      <%= text_field_tag :search, params[:search], placeholder: 'Search', class: 'form-control', id: "spacing2"%>

      <%= submit_tag 'Search', name: nil, class: 'btn btn-secondary' %>

      <% end %>

    </div>

  </div>

  <table class="table table-responsive">

    <thead class="thead-dark">

      <tr>

        <th>ID</th>

        <th>Username</th>

        <th>Email</th>

        <th>First Name</th>

        <th>Last Name</th>

        <th colspan="3"></th>

      </tr>

    </thead>

    <tbody id="users" >

      <%= render @users %>

    </tbody>

  </table>

  <div id="paginator">

    <%= paginate @users, remote: true, views_prefix: 'admin' %>

  </div>

</div>
