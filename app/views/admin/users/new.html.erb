
<div class="container">
  <div class="text2">
       <h1> Create a new user</h1>
        <%= simple_form_for @user ,url:admin_users_path do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :username %>
        <%= f.input :email %>
        <%= f.input :password %>
         <%= f.input :password_confirmation %>
        <%= f.button :submit, class: "btn btn-primary btn-md" %>
        <% end %>
        <div style=" padding-top: 1%">
        <%= link_to "Back To Index", admin_users_path, class:"btn btn-info", method: :get %>
        </div>
  </div>
</div>



}
