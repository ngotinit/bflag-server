<tr>
    <td>
        <%= user.id %>
    </td>
    <td>
        <%= user.username %>
    </td>
    <td>
        <%= user.email %>
    </td>
    <td>
        <%= user.first_name %>
    </td>
    <td>
        <%= user.last_name %>
    </td>
    <td>
        <%= link_to 'Show', admin_user_path(user), class: 'btn btn-primary' %>
    </td>
    <td>
        <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-warning' %>
    </td>
    <td>
        <%= link_to 'Delete', admin_user_path(user),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-danger' %>
    </td>
</tr>
