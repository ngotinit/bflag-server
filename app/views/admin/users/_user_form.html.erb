<%= simple_form_for [:admin, @user] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <div class="form-group">
    <%= f.label :profile_image %><br />
    <%= f.file_field :profile_image %>
    <%= image_tag(@user.profile_image.url(:thumb)) if @user.profile_image? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary float-right" %>
  </div>
<% end %>
