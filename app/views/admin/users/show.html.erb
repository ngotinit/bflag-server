<div class="container" style="margin-top: 1%">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <a href="#" class="list-group-item active"><i class="glyphicon glyphicon-user"></i> <%= @user.username %></a>
        <div class="avatar">
          <%= image_tag @user.avatar.avatar_file.url(:preview) %>
        </div>
      </div>
    </div>
    <div class="col-md-9">

      <h2 >Profile Info</h2>

      <table class="table " style="background-color: #f8f9fa;margin-top:1rem">
        <tbody>
          <tr>
            <td style="font-weight: bold;width: 21%;">First Name</td>
            <td>
              <%= @user.first_name %>
            </td>
          </tr>
          <tr>
            <td style="font-weight: bold;width: 21%;">Last Name</td>
            <td>
              <%= @user.last_name %>
            </td>
          </tr>
          <tr>
            <td style="font-weight: bold;width: 21%;">User Name</td>
            <td>
              <%= @user.username %>
            </td>
          </tr>
          <tr>
            <td style="font-weight: bold;width: 21%;">Email</td>
            <td>
              <%= @user.email %>
            </td>
          </tr>
          <tr>
            <td style="font-weight: bold;width: 21%;">Password</td>
            <td>
              <%= @user.password %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
